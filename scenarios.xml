<paf_config>
    <!--Root level directories-->
    <param name="ROOT" value="~/Projects"/>
    <param name="ANDROID_DEPLOYMENT_DIR" value="android_deployment"/>
    
    <!--Project sub-directories-->
    <param name="DOWNLOAD_DIR" value="download"/>
    <param name="SOURCE_DIR" value="source"/>
    <param name="BUILD_DIR" value="build"/>
    <param name="PRODUCT_DIR" value="product"/>
    <param name="DEPLOY_DIR" value="deploy"/>
    
    <!--ARM toolchain-->
    <param name="ARM_TOOLCHAIN_DIR" value="arm_toolchain"/>
    
    <!--System architecture parameters-->
    <param name="ARM_COMPILER" value="arm-linux-gnueabi"/>
    <param name="ARM64_COMPILER" value="aarch64-linux-gnu"/>
    <!--Expected values are = ARM and ARM64-->
    <param name="ARCH_TYPE" value="ARM64"/>
    
    <!--U-boot parameters-->
    <param name="UBOOT_CONFIG_TARGET_ARM" value="vexpress_ca9x4_defconfig"/>
    <param name="UBOOT_CONFIG_TARGET_ARM64" value="qemu_arm64_defconfig"/>
    <param name="UBOOT_GIT_REFERENCE" value="git@github.com:u-boot/u-boot.git"/>
    <param name="UBOOT_FOLDER_NAME" value="u-boot"/>
    
    <!--Linux kernel parameters-->
    <param name="LINUX_KERNEL_FOLDER_NAME" value="linux_kernel"/>
    
    <!--Build system parameters-->
    <param name="BUILD_SYSTEM_CORES_NUMBER" value="8"/>
    
    <phase name="prepare_system">
    	<task name="scenarios.general.PrepareDirectories"/>
    	<task name="scenarios.general.InstallDependencies"/>
    </phase>
    
    <phase name="compile_uboot">
        <task name="scenarios.uboot.SyncUBoot"/>
        <task name="scenarios.uboot.ConfigureUBoot"/>
	    <task name="scenarios.uboot.BuildUBoot"/>
	    <task name="scenarios.uboot.DeployUBoot"/>
    </phase>
    
    <phase name="compile_linux_kernel">
        <task name="scenarios.linux_kernel.SyncLinuxKernel"/>
        <task name="scenarios.linux_kernel.ConfigureLinuxKernel"/>
	    <task name="scenarios.linux_kernel.BuildLinuxKernel"/>
	    <task name="scenarios.linux_kernel.DeployLinuxKernel"/>
    </phase>
    
    <scenario name="build_boot_image">
        <phase name="prepare_system"/>
        <phase name="compile_uboot"/>
        <phase name="compile_linux_kernel"/>
    </scenario>
</paf_config>
